{
	"extends": [
		"stylelint-config-standard",
		"stylelint-config-prettier",
		"stylelint-order-htmlacademy"
	],
	"plugins": ["stylelint-order"],
	"rules": {
		"indentation": "tab",
		"declaration-block-no-redundant-longhand-properties": null,
		"selector-class-pattern": "^[a-z][a-zA-Z0-9]+$"
	}
}
